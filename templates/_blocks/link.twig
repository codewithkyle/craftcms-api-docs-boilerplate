{% set url = "#" %}
{% if block.externalUrl|length %}
    {% set url = block.externalUrl %}
{% elseif block.document|length %}
    {% set url = "/" ~ block.document[0].slug %}
{% endif %}
<div>
    <a href="{{ url }}" {{ block.buttonMode ? 'class="bttn"' : 'class="link" flex="row nowrap items-center"' }}>
        <span>{{ block.label }}</span>
        <svg class="ml-0.25 mt-0.25"  xmlns="http://www.w3.org/2000/svg"  width="20"  height="20"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l14 0" /><path d="M15 16l4 -4" /><path d="M15 8l4 4" /></svg>
    </a>
</div>
